@model IEnumerable<GaraManagement.ViewModels.DetailMaterialAmount>
@{
    Layout = "";
}
<table id="dtTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Thứ tự</th>
            <th>Tên vật tư</th>
            <th>Số lượng đã bán</th>
        </tr>
    </thead>
    <tbody>
        @{
            var s = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>#@s</td>
                    <td>@item.Name</td>
                    <td>@item.Sum</td>
                </tr>
                s++;
            }

        }

    </tbody>
</table>
<div class="modal-footer">
    <div class="modal-actions col-md-offset-3 col-md-9">
        <a icon-name="action-cancel" name="close" class="btn btn-sm btn-default" data-dismiss="modal">
            Close
        </a>
    </div>
</div>