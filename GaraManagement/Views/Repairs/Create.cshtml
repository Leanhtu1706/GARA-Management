@model GaraManagement.Models.Repair

@{
    ViewData["Title"] = "Nhập xưởng";
}
<link href="~/assets/css/customStyleLayout.css" rel="stylesheet" />

<div class="row divmodal">
    <form asp-action="Create" id="formCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="IdCar" class="control-label"></label>
                    @*<select id="IdCar" asp-for="IdCar" class="form-control" asp-items="ViewBag.IdCar"></select>*@
                    <input asp-for="IdCar" value=@ViewBag.IdCar class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="State" class="control-label"></label>
                    <select asp-for="State" asp-items="Enum.GetValues(typeof(StateType)).Cast<StateType>().Select(o => new SelectListItem { Text = o.GetEnumDisplayName(), Value = ((int)o).ToString() })" class="form-control"></select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="DateOfFactoryEntry" class="control-label"></label>
                    <input asp-for="DateOfFactoryEntry" class="form-control" />
                    <span asp-validation-for="DateOfFactoryEntry" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .createPartial {
        background: #fff;
        box-shadow: 0px 0px 5px 5px #ededed;
        border-radius: 5px;
    }

    form {
        width: 100%;
    }

    .form-control {
        height: 36px !important;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-sm btn-default" data-dismiss="modal">
            Đóng
        </button>
        <button icon-name="action-save" name="submit" form="formCreate" class="btn btn-sm btn-success">
            Nhập xưởng
        </button>
    </div>
}
