@model GaraManagement.Models.Repair

@{
    ViewData["Title"] = "Cập nhật thông tin phiết sửa chữa";

}
<div class="row divmodal">

    <form asp-action="Edit" id="formEdit" style="width: 70%;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="IdCar" class="control-label">Mã Xe</label>
            </div>
            <div class="col-sm-8">
                <select asp-for="IdCar" class="form-control" asp-items="ViewBag.IdCar"></select>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="DateOfFactoryEntry" class="control-label" ></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="DateOfFactoryEntry" class="form-control" />
                <span asp-validation-for="DateOfFactoryEntry" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="DateFinished" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="DateFinished" class="form-control" />
                <span asp-validation-for="DateFinished" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="IdCar" class="control-label">Customer</label>
            </div>
            <div class="col-sm-8">
                <select asp-for="State" asp-items="Enum.GetValues(typeof(StateType)).Cast<StateType>().Select(o => new SelectListItem { Text = o.GetEnumDisplayName(), Value = ((int)o).ToString() })" class="form-control"></select>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
            Đóng
        </button>
        <button icon-name="action-save" name="submit" form="formEdit" class="btn btn-success">
            Cập nhật
        </button>
    </div>
}
