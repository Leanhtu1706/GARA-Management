@model GaraManagement.Models.Supplier

@{
    ViewData["Title"] = "Thêm nhà cung cấp";
}

<div class="row divmodal">
     <form asp-action="Create" id="formCreate">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="row form-group">
             <div class="col-sm-2">
                 <label asp-for="Name" class="control-label" name="Name"></label>
             </div>
             <div class="col-sm-8">
                 <input asp-for="Name" class="form-control" />
                 <span asp-validation-for="Name" class="text-danger"></span>
             </div>
         </div>
         <div class="row form-group">
             <div class="col-sm-2">
                 <label asp-for="Phone" class="control-label" name="Name"></label>
             </div>
             <div class="col-sm-8">
                 <input asp-for="Phone" class="form-control" />
                 <span asp-validation-for="Phone" class="text-danger"></span>
             </div>
         </div>
         <div class="row form-group">
             <div class="col-sm-2">
                 <label asp-for="Email" class="control-label" name="Name"></label>
             </div>
             <div class="col-sm-8">
                 <input asp-for="Email" class="form-control" />
                 <span asp-validation-for="Email" class="text-danger"></span>
             </div>
         </div>
         <div class="row form-group">
             <div class="col-sm-2">
                 <label asp-for="Address" class="control-label" name="Name"></label>
             </div>
             <div class="col-sm-8">
                 <input asp-for="Address" class="form-control" />
                 <span asp-validation-for="Address" class="text-danger"></span>
             </div>
         </div>
         <div class="row form-group">
             <div class="col-sm-2">
                 <label asp-for="Description" class="control-label" name="Description"></label>
             </div>
             <div class="col-sm-8">
                 <input asp-for="Description" class="form-control" />
                 <span asp-validation-for="Description" class="text-danger"></span>
             </div>
         </div>
     </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-sm btn-default" data-dismiss="modal">
            Đóng
        </button>
        <button icon-name="action-save" name="submit" form="formCreate" class="btn btn-sm btn-success">
            Thêm mới
        </button>
    </div>
}
