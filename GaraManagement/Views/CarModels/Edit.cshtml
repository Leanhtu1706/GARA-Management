@model GaraManagement.Models.CarModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row divmodal">
    <form asp-action="Edit" method="post" id="formEdit" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="ModelName" class="control-label" name="Name"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="ModelName" class="form-control" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-sm btn-default" data-dismiss="modal">
            Close
        </button>
        <button icon-name="action-save" name="submit" form="formEdit" class="btn btn-sm btn-warning" id="saveBtn">
            Save
        </button>
    </div>
}
