@model GaraManagement.Models.Material

@{
    ViewData["Title"] = "Thêm mới vật tư";
}

<div class="row divmodal">
    <form asp-action="Create" id="formCreate" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-7">

                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="IdType" class="control-label">Type</label>
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="IdType" class="form-control" asp-items="ViewBag.TypeName"></select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Name" class="control-label" name="Name"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Unit" class="control-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Unit" class="form-control" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Price" class="control-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Amount" class="control-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Description" class="control-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Image" class="control-label"></label>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <input asp-for="ImageFile" accept="image/*" id="uploadFile">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <img class="image-edit" src="" alt="Alternate Text" />
                    </div>
                </div>
            
            </div>
        </div>

    </form>
</div>
<script src="~/assets/js/core/jquery.min.js"></script>
<script>
    $('input[type="file"]').change(function (e) {
        var path = "../assets/img/" + e.target.files[0].name;
        $(".image-edit").attr("src", path);
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
            Close
        </button>
        <button icon-name="action-save" name="submit" form="formCreate" class="btn btn-success">
            Create
        </button>
    </div>
}
