@model IEnumerable<GaraManagement.Models.Material>

@{
    ViewData["Title"] = "Index";
}
<!-- MDBootstrap Datatables  -->
<link href="~/assets/js/MDB/css/addons/datatables.min.css" rel="stylesheet">
<link href="~/assets/css/customStyleLayout.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="c-subheader justify-content-between px-3">
        <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item"><a href="#">Admin</a></li>
            <li class="breadcrumb-item">Kho vật tư</li>
            <li class="breadcrumb-item active">Thông tin vật tư</li>
        </ol>
    </div>
    <div class="row custyle">
        <a class="btn btn-sm btn-success create-btn" data-toggle='modal' data-target='#createModal'>Thêm mới vật tư</a>
        <div class="input-group no-border">
            <form asp-action="Index" method="get">
                <input id="search" type="text" name="search" class="form-control" value="@ViewData["GetTextSearch"]" placeholder="Search...">
            </form>
            <i class="fas fa-backspace"></i>
        </div>
        <table id="dtTable" class="table table-striped table-bordered"  cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Unit)
                    </th>
                    <th>
                        Giá
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdTypeNavigation.Name)
                    </th>
                    <th class="col-action">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <img class="image-field" src="@item.Image" alt="Alternate Text" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PriceMaterials.Where(p =>p.IdMaterial == item.Id).OrderByDescending(p => p.UpdateAt).First().Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdTypeNavigation.Name)
                    </td>
                    <td class="action-button">
                        <a class="btn btn-sm btn-warning edit-btn" data-toggle='modal' data-target='#editModal' data-id="@item.Id">Sửa</a> |
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                    </td>
                </tr>
                }
                <!-- Phân trang -->
                @*<tr>
                    <td colspan="10" align="center">
                        @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index",
                       new { pageNumber }),
                       new PagedListRenderOptions
                       {
                           LiElementClasses = new string[] { "page-item" },
                           PageClasses = new string[] { "page-link" }
                       })
                    </td>
                </tr>*@
            </tbody>
        </table>
    </div>
</div>

@*Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    / @Model.PageCount*@

@* View Modal*@
<div id="createModal" class="modal fade col-md-12" tabindex="-1" role="dialog">
    <div class="modal-dialog w-full" style="max-width: 80%;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Create New Employee</h4>
            </div>
            <div class="modal-body">
                <div class="spinner overlay-loading">
                    <span></span>
                    <span class="rect2"></span>
                    <span class="rect3"></span>
                    <span class="rect4"></span>
                    <span class="rect5"></span>
                </div>
            </div>
            <div class="modal-footer">
                <div class="modal-actions col-md-offset-3 col-md-9">
                    <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="editModal" class="modal fade col-md-12" tabindex="-1" role="dialog">
    <div class="modal-dialog w-full" style="max-width: 80%;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Edit Supplies</h4>
            </div>
            <div class="modal-body">
                <div class="spinner overlay-loading">
                    <span></span>
                    <span class="rect2"></span>
                    <span class="rect3"></span>
                    <span class="rect4"></span>
                    <span class="rect5"></span>
                </div>
            </div>
            <div class="modal-footer">
                <div class="modal-actions col-md-offset-3 col-md-9">
                    <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Style and Js-->
<style>
    .material {
/*        background-color: #29a6c8;*/
        border-radius: 4px;
    }
        .material a.nav-link {
            background-color: rgba(200, 200, 200, 0.2);
            border-left: 5px solid #06b8ffc7 !important;
        }
</style>
<script src="~/assets/js/core/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.nav .subWarehouse').toggleClass("show");
        $('.sidebar-wrapper .nav li a .warehouse').toggleClass("rotate");

        $('#dtTable').DataTable(
        {
            "pageLength": 9
        });
        //$('.dataTables_length').addClass('bs-select');

        if ('@ViewBag.SuccessMessage' != "")
        {
            $.bootstrapGrowl('@ViewBag.SuccessMessage', {
                type: 'success',
                align: 'center',
                delay: 2000,
                stackup_spacing: 30
            });
        }
    });

    //$(document).on('shown.bs.modal', '#createModal', function (event) {
    $(".create-btn").click(function () {
        console.log("shown modal event", event);

        $.ajax({
            /**/
            url: '@Url.Action("Create")',
            /**/
            type: "GET",
            data: { layout: "_ModalLayout" },
            success: function (data) {
                console.log("Data nè:", data);
                $("#createModal .modal-content").html(data);
            }
        });
    });
      $(".edit-btn").click(function () {
        console.log("shown modal event", event);
        var supId = $(this).attr("data-id");
        $.ajax({
            /**/
            url: '@Url.Action("Edit")',
            /**/
            type: "GET",
            data: { id: supId, layout: "_ModalLayout" },
            success: function (data) {
                $("#editModal .modal-content").html(data);
            }
        });
      });
    //$(".create-btn").on('hide.bs.modal', function () {
    //    alert('The modal is about to be hidden.');
    //});

    $(".fa-backspace").click(function () {
        window.location = "Materials";
    });
</script>
