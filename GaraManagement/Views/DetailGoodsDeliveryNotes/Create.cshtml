@model GaraManagement.Models.DetailGoodsDeliveryNote

@{
    ViewData["Title"] = "Thêm chi tiết xuất hàng";
}

<div class="row divmodal">
    <form asp-action="Create" id="formCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdGoodsDeliveryNote" value="@ViewBag.IdGoodDeliveryNotes" />
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="IdMaterialNavigation.Name" class="control-label" name="IdMaterial"></label>
            </div>
            <div class="col-sm-8">
                <select asp-for="IdMaterial" class="form-control" asp-items="@ViewBag.MaterialName"></select>
                <span asp-validation-for="IdMaterial" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Amount" class="control-label" name="Amount"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
            Close
        </button>
        <button icon-name="action-save" name="submit" form="formCreate" class="btn btn-success">
            Create
        </button>
    </div>
}