@model GaraManagement.Models.TypeOfSupply

@{
    ViewData["Title"] = "Thêm danh mục vật tư";
}


<div class="row divmodal">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Name" class="control-label" name="Name"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Description" class="control-label" name="Description"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="btn-action">
            <button icon-name="action-cancel" name="close" class="btn btn-default closeBtn" data-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
