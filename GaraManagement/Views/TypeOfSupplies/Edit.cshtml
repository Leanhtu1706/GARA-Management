@model GaraManagement.Models.TypeOfSupply

@{
    ViewData["Title"] = "Sửa danh mục vật tư";
}


<div class="row divmodal">
    <form asp-action="Edit" id="formEdit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Name" class="control-label" name="Name"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Description" class="control-label" name="Description"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" asp-for="CreateAt" class="form-control" />
        <input type="hidden" asp-for="UpdateAt" class="form-control" />
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
            Close
        </button>
        <button icon-name="action-save" name="submit" form="formEdit" class="btn btn-warning">
            Save
        </button>
    </div>
}

