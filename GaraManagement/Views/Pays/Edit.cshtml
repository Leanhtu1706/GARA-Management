@model GaraManagement.Models.Pay

@{
    ViewData["Title"] = "Thanh toán nợ";
}


<div class="row divmodal">
    <form asp-action="Edit" id="formEdit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="IdRepair" class="control-label"></label>
            <input asp-for="IdRepair" class="form-control" />
            <span asp-validation-for="IdRepair" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfPayment" class="control-label"></label>
            <input asp-for="DateOfPayment" class="form-control" />
            <span asp-validation-for="DateOfPayment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input hidden asp-for="Paid" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="owe" class="control-label"></label>
            <input asp-for="owe" class="form-control" />
            <span asp-validation-for="owe" class="text-danger"></span>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
            Đóng
        </button>
        <button icon-name="action-save" name="submit" form="formEdit" class="btn btn-success">
            Thanh toán nợ
        </button>
    </div>
}