@model GaraManagement.Models.Pay

@{
    ViewData["Title"] = "Thanh toán";
}

<div class="row divmodal">
    <form asp-action="Create" id="formCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="IdRepair" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <select asp-for="IdRepair" id="IdRepair" class="form-control" asp-items="ViewBag.IdRepair"></select>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="DateOfPayment" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="DateOfPayment" class="form-control" />
                <span asp-validation-for="DateOfPayment" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="Paid" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Paid" class="form-control" />
                <span asp-validation-for="Paid" class="text-danger"></span>
            </div>
        </div>

    </form>
</div>

<script>
    $('#IdRepair').select2({
        dropdownParent: $('#createModal')
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-sm btn-default" data-dismiss="modal">
            Đóng
        </button>
        <button icon-name="action-save" name="submit" form="formCreate" class="btn btn-sm btn-success">
            Thanh toán
        </button>
    </div>
}