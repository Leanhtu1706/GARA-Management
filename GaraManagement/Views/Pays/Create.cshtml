@model GaraManagement.Models.Pay

@{
    ViewData["Title"] = "Thanh toán";
}

<div class="row divmodal">
    <form asp-action="Create" id="formCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="IdRepair" class="control-label"></label>
            <input asp-for="IdRepair" class="form-control" value=@ViewBag.IdRepair readonly/>
        </div>
        <div class="form-group">
            <label asp-for="DateOfPayment" class="control-label"></label>
            <input asp-for="DateOfPayment" class="form-control" />
            <span asp-validation-for="DateOfPayment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Paid" class="control-label"></label>
            <input asp-for="Paid" class="form-control" />
            <span asp-validation-for="Paid" class="text-danger"></span>
        </div>

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
            Đóng
        </button>
        <button icon-name="action-save" name="submit" form="formCreate" class="btn btn-success">
            Thanh toán
        </button>
    </div>
}