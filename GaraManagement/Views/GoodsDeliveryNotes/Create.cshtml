@model GaraManagement.Models.GoodsDeliveryNote


<div class="row divmodal">
    <form asp-action="Create" id="formCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="ExportDate" class="control-label" name="ExportDate"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="ExportDate" class="form-control" />
                <span asp-validation-for="ExportDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="IdRepair" class="control-label" name="IdRepair"></label>
            </div>
            <div class="col-sm-8">
                <select asp-for="IdRepair" class="form-control" asp-items="ViewBag.IdRepair"></select>
                <span asp-validation-for="IdRepair" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Description" class="control-label" name="Description"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <input type="hidden" asp-for="UpdateAt" class="form-control" />

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
            Close
        </button>
        <button icon-name="action-save" name="submit" form="formCreate" class="btn btn-success">
            Create
        </button>
    </div>
}