@model GaraManagement.Models.Employee

@{
    ViewData["Title"] = "Edit employee";
}

<div class="row divmodal">
    <form asp-controller="Employees" asp-action="Edit" method="post" id="formEdit" role="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
        <div class="row form-group">
            <div class="col-md-2 offset-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-md-7">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 offset-2">
                <label asp-for="DateOfBirth" class="control-label"></label>
            </div>
            <div class="col-md-7">
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 offset-2">
                <label asp-for="ContractStartDate" class="control-label"></label>
            </div>
            <div class="col-md-7">
                <input asp-for="ContractStartDate" class="form-control" />
                <span asp-validation-for="ContractStartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 offset-2">
                <label asp-for="Salary" class="control-label"></label>
            </div>
            <div class="col-md-7">
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 offset-2">
                <label asp-for="Phone" class="control-label"></label>
            </div>
            <div class="col-md-7">
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 offset-2">
                <label asp-for="Address" class="control-label"></label>
            </div>
            <div class="col-md-7">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 offset-2">
                <label asp-for="IdentityCardNumber" class="control-label"></label>
            </div>
            <div class="col-md-7">
                <input asp-for="IdentityCardNumber" class="form-control" />
                <span asp-validation-for="IdentityCardNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2 offset-2">
                <label asp-for="Department" class="control-label"></label>
            </div>
            <div class="col-md-7">
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <hr/>
        <div class="btn-action">
            <button icon-name="action-cancel" name="close" class="btn btn-default closeBtn" data-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-warning" value="Save" />
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
