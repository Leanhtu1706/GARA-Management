@model GaraManagement.Models.Supply

@{
    ViewData["Title"] = "Create new Supplies";
}

<div class="row divmodal">
    <form asp-action="Create" id="formCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-7">

                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="IdType" class="control-label">Type</label>
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="IdType" class="form-control" asp-items="ViewBag.TypeName"></select>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Name" class="control-label" name="Name"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Unit" class="control-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Unit" class="form-control" />
                        <span asp-validation-for="Unit" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Price" class="control-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Amount" class="control-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Description" class="control-label"></label>
                    </div>
                    <div class="col-sm-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="row form-group">
                    <div class="col-sm-4">
                        <label asp-for="Image" class="control-label"></label>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <input type="file" id="uploadFile">
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <img class="image-edit" src="" alt="Alternate Text" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <input asp-for="Image" class="form-control image-input">
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="btn-action">
                    <button icon-name="action-cancel" name="close" class="btn btn-default closeBtn" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-success" value="Save" />
                </div>
            </div>
        </div>

        @*<div class="row form-group">
                <div class="col-md-5 offset-3">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>*@
    </form>
</div>
<script src="~/assets/js/core/jquery.min.js"></script>
<script>
    $('input[type="file"]').change(function (e) {
        var path = "../assets/img/" + e.target.files[0].name;
        $(".image-edit").attr("src", path);
        $('.image-input').attr('value', path);
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
