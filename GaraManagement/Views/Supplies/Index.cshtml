<div class="container">
    <div class="row col-md-12 custyle">
        <table class="table table-striped custab">
            <thead>
                <a class="btn btn-success" asp-action="Create">Add New Supplies</a>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Unit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdTypeNavigation.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdTypeNavigation.Name)
                        </td>
                        <td class="action-button">
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .action-button {
        text-align: center;
    }

    tr:nth-child(odd) {
        background-color: lightskyblue;
    }

    tr:nth-child(even) {
        background-color: #daefff;
    }

    .action-button > .btn {
        padding: 5px 8px;
    }

    thead > tr > th {
        background-color: black;
        font-size: 18px;
        font-weight: 700;
        color: aliceblue;
    }

    .nav-item:visited, .nav-item:active, .nav-item:focus {
        background-color: #00bcd4 !important;
        display: block;
    }
    .supplies {
        background-color: #00bcd4;
        margin: 0 15px;
        border-radius: 4px;
    }
    .sidebar .nav .supplies a {
        border-radius: 3px;
    }
    /*    body{
        font-size:16px;
    }*/
</style>


