@model GaraManagement.Models.GoodsReceivedNote

@{
    ViewData["Title"] = "Cập nhật phiếu nhập hàng";
}

<div class="row divmodal">
    <form asp-action="Edit" id="formEdit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="ImportDate" class="control-label" name="ImportDate"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="ImportDate" class="form-control" />
                <span asp-validation-for="ImportDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="IdSupplier" class="control-label" name="IdSupplier"></label>
            </div>
            <div class="col-sm-8">
                <select asp-for="IdSupplier" class="form-control" asp-items="ViewBag.IdSupplier"></select>
                <span asp-validation-for="IdSupplier" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-2">
                <label asp-for="Description" class="control-label" name="Description"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <input type="hidden" asp-for="UpdateAt" class="form-control" />

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section actions {
    <div class="modal-actions col-md-offset-3 col-md-9">
        <button icon-name="action-cancel" name="close" class="btn btn-sm btn-default" data-dismiss="modal">
            Close
        </button>
        <button icon-name="action-save" name="submit" form="formEdit" class="btn btn-sm btn-warning">
            Save
        </button>
    </div>
}