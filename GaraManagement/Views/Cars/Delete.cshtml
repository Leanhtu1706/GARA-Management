@model GaraManagement.Models.Car

@{
    ViewData["Title"] = "Delete";
    var path = "../";
}
<link href="~/assets/css/customStyleLayout.css" rel="stylesheet" />

<div class="view-delete">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Car</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <dl class="row delete">
                    
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.LicensePlates)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.LicensePlates)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Color)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Color)
                    </dd>
                    <dt class="col-sm-4">
                        Chủ xe 
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.IdCustomerNavigation.Name)
                    </dd>
                </dl>
            </div>
            <div class="col-md-5">
                <dl class="row delete">
                    <dd class="col-md-8 image-detail">
                        <img src=@path@Html.DisplayFor(model => model.Image) alt="Alternate Text" />
                    </dd>
                </dl>
            </div>
        </div>
        <hr />
        <div>
            <a icon-name="action-delete" class="btn btn-danger" data-target="#deleteConfirmModal" data-toggle="modal">Delete</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
    <div id="deleteConfirmModal" class="modal fade" role="dialog">
        <div class="modal-dialog delete">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 style="color:black;" class="modal-title">Bạn có chắc chắn không?</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-action">
                    <form class="form-horizontal" asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="modal-actions col-md-6 offset-6">
                            <a asp-action="Index" icon-name="action-cancel" class="btn btn-default" data-dismiss="modal" data-target="#deleteConfirmModal">
                                Cancel
                            </a>
                            <button type="submit" icon-name="action-delete" class="btn btn-danger">
                                Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
