@model IEnumerable<GaraManagement.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<link href="~/assets/css/customStyleLayout.css" rel="stylesheet" />

<div class="container-fluid">
    <h2 class="title">Khách hàng</h2>
    <div class="row custyle">
        <a class="btn btn-success create-btn" data-toggle='modal' data-target='#createModal'>Add New Customer</a>
        <div class="input-group no-border">
            <form asp-action="Index" method="get">
                <input id="search" type="text" name="search" class="form-control" value="@ViewData["GetTextSearch"]" placeholder="Search...">
            </form>
            <i class="fas fa-backspace"></i>
        </div>
        <table class="table table-striped custab">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdentityCardNumber)
                    </th>
                    <th class="col-action">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdentityCardNumber)
                        </td>
                        <td class="action-button">
                            <a class="btn btn-warning edit-btn" data-toggle='modal' data-target='#editModal' data-id="@item.Id">Edit</a> |
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                            <a class="btn btn-primary car-customer" name="@item.Name" style="width:40px;"><i class="fas fa-car"></i></a>
                        </td>
                    </tr>
                }
                <!-- Phân trang -->
                <tr>
                    <td colspan="7" align="center">
                        @Html.PagedListPager((IPagedList)Model, pageNumber => Url.Action("Index",
    new { pageNumber }),
    new PagedListRenderOptions
    {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
    })
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@* View Modal*@
<div id="createModal" class="modal fade col-md-12" tabindex="-1" role="dialog">
    <div class="modal-dialog w-full" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Create New Customer</h4>
            </div>
            <div class="modal-body">
                <div class="spinner overlay-loading">
                    <span></span>
                    <span class="rect2"></span>
                    <span class="rect3"></span>
                    <span class="rect4"></span>
                    <span class="rect5"></span>
                </div>
            </div>
            <div class="modal-footer">
                <div class="modal-actions col-md-offset-3 col-md-9">
                    <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="editModal" class="modal fade col-md-12" tabindex="-1" role="dialog">
    <div class="modal-dialog w-full" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4>Edit Customer</h4>
            </div>
            <div class="modal-body">
                <div class="spinner overlay-loading">
                    <span></span>
                    <span class="rect2"></span>
                    <span class="rect3"></span>
                    <span class="rect4"></span>
                    <span class="rect5"></span>
                </div>
            </div>
            <div class="modal-footer">
                <div class="modal-actions col-md-offset-3 col-md-9">
                    <button icon-name="action-cancel" name="close" class="btn btn-default" data-dismiss="modal">
                        Close
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Style and Js-->
<style>
    .customer-profile {
        background-color: #29a6c8;
        border-radius: 4px;
    }
</style>
<script src="~/assets/js/core/jquery.min.js"></script>
@{ 
    if (TempData["SuccessMessage"] != null)
        {
    <script>
        $(document).ready(function () {
            var message = "@TempData["SuccessMessage"]";
            $.bootstrapGrowl(message, {
                type: 'success',
                align: 'center',
                delay: 2000,
                stackup_spacing: 30
            });
        });
    </script>
        TempData["SuccessMessage"] = "" ;
    }
}
<script>
    $(document).ready(function () {
        $('.nav .subCustomer').toggleClass("show");
        $('.sidebar-wrapper .nav li a .customer').toggleClass("rotate");

    });

    //$(document).on('shown.bs.modal', '#createModal', function (event) {
    $(".create-btn").click(function () {
        console.log("shown modal event", event);
        $.ajax({
            /**/
            url: '@Url.Action("Create")',
            /**/
            type: "GET",
            data: { layout: "_ModalLayout" },
            success: function (data) {
                $("#createModal .modal-content").html(data);
            }
        });
    });
      $(".edit-btn").click(function () {
        console.log("shown modal event", event);
          var supId = $(this).attr("data-id");
        $.ajax({
            /**/
            url: '@Url.Action("Edit")',
            /**/
            type: "GET",
            data: { id: supId, layout: "_ModalLayout" },
            success: function (data) {
                $("#editModal .modal-content").html(data);
            }
        });
      });
    $(".create-btn").on('hide.bs.modal', function () {
        alert('The modal is about to be hidden.');
    });

    $(".fa-backspace").click(function () {
        window.location = "Customers";
    });

    $(".car-customer").click(function () {
        var nameCus = $(this).attr('name');
        console.log("name Customer:", nameCus);
        $.ajax({
            /**/
            url: '@Url.Action("Index","Cars")',
            //url: '/Cars/Index',
            //url: '@Url.Content("~/Cars/Index")' ,
            /**/
            type: "GET",
            data: { search: nameCus},
            success: function (data) {
                console.log("Redirect to Cars:", data);
                window.location.href = '/Cars/Index?search=' + nameCus;
            }
        });
    });

</script>