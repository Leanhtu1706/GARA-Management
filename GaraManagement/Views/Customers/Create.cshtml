@model GaraManagement.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<div class="row divmodal">
    <form asp-action="Create" id="formCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="Id" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="Name" class="control-label" name="Name"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="DateOfBirth" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="Gender" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="Phone" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="Address" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>        
        <div class="row form-group">
            <div class="col-sm-4">
                <label asp-for="IdentityCardNumber" class="control-label"></label>
            </div>
            <div class="col-sm-8">
                <input asp-for="IdentityCardNumber" class="form-control" />
                <span asp-validation-for="IdentityCardNumber" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="btn-action">
            <button icon-name="action-cancel" name="close" class="btn btn-default closeBtn" data-dismiss="modal">Close</button>
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
