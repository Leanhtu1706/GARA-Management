@model IEnumerable<GaraManagement.Models.History>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <link href="~/assets/js/MDB/css/addons/datatables.min.css" rel="stylesheet">

<div class="container-fluid">
    <div class="c-subheader justify-content-between px-3">
        <ol class="breadcrumb border-0 m-0 px-0 px-md-3">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item"><a href="#">Admin</a></li>
            <li class="breadcrumb-item active">Lịch sử</li>
        </ol>
    </div>
    <div class="table-area">
        <table id="dtTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th style="width:15%;">
                        @Html.DisplayNameFor(model => model.DateHistory)
                    </th>
                    <th style="width:20%;">
                        Tài khoản
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Event)
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateHistory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserNameNavigation.UserName) (IDnv: @Html.DisplayFor(modelItem => item.UserNameNavigation.IdEmployee))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Event)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .history {
        background-color: #29a6c8;
        border-radius: 4px;
    }
</style>
<script src="~/assets/js/core/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.nav .subAccount').toggleClass("show");
        $('.sidebar-wrapper .nav li a .account').toggleClass("rotate");

        $('#dtTable').DataTable(
            {
                "pageLength": 30
            });
    });
</script>
